<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.LoginController">
   <children>
      <Label layoutX="140" layoutY="20" styleClass="heading" text="Login" />
      <Label layoutX="50" layoutY="80" text="Username:" />
      <TextField fx:id="usernameField" layoutX="140" layoutY="80" promptText="Enter your username" />
      <Label layoutX="50" layoutY="120" text="Password:" />
      <PasswordField fx:id="passwordField" layoutX="140" layoutY="120" promptText="Enter your password" />
      <Button fx:id="loginButton" layoutX="140" layoutY="160" onAction="#login" text="Login" />
   </children>
</AnchorPane>
